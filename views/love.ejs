<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>How Much I Love You</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- Floating Hearts Background -->
  <div class="floating-hearts">
    <div class="heart">💖</div>
    <div class="heart">💕</div>
    <div class="heart">💓</div>
    <div class="heart">💗</div>
    <div class="heart">💘</div>
    <div class="heart">💖</div>
    <div class="heart">💕</div>
    <div class="heart">💓</div>
    <div class="heart">💗</div>
  </div>

  <div class="main-layout">
    <div class="content-wrapper">
      <div class="card text-center">
        <h1 class="text-4xl font-bold text-pink-700 mb-6">My Love for You, <%= girlName %></h1>
        
        <p class="text-lg text-gray-800 mb-6">
          Since <strong><%= loveStartDate.toDateString() %></strong>:
        </p>

        <div class="love-counters">
          <div class="counter-item">
            <div class="text-2xl font-bold text-pink-600">⏳</div>
            <div class="text-xl font-medium text-pink-600">
              <span id="days">0</span> days
            </div>
          </div>
          
          <div class="counter-item">
            <div class="text-2xl font-bold text-pink-600">🕐</div>
            <div class="text-xl font-medium text-pink-600">
              <span id="hours">0</span> hours
            </div>
          </div>
          
          <div class="counter-item">
            <div class="text-2xl font-bold text-pink-600">⏱️</div>
            <div class="text-xl font-medium text-pink-600">
              <span id="minutes">0</span> minutes
            </div>
          </div>
          
          <div class="counter-item">
            <div class="text-2xl font-bold text-pink-600">⏲️</div>
            <div class="text-xl font-medium text-pink-600">
              <span id="seconds">0</span> seconds
            </div>
          </div>
          
          <div class="counter-item">
            <div class="text-2xl font-bold text-pink-600">❤️</div>
            <div class="text-xl font-medium text-pink-600">
              <span id="heartbeats">0</span> heartbeats
            </div>
          </div>
        </div>

        <a href="/" class="back-btn">
          ← Back Home
        </a>
      </div>
    </div>
  </div>

  <script>
    const loveStart = new Date("<%= loveStartDate.toISOString() %>");
    const beatsPerSecond = 1.2;

    function updateLoveCounters() {
      const now = new Date();
      const elapsedMs = now - loveStart;
      const seconds = Math.floor(elapsedMs / 1000);
      const minutes = Math.floor(seconds / 60);
      const hours = Math.floor(minutes / 60);
      const days = Math.floor(hours / 24);
      const heartbeats = Math.floor(seconds * beatsPerSecond);

      document.getElementById("seconds").textContent = seconds % 60;
      document.getElementById("minutes").textContent = minutes % 60;
      document.getElementById("hours").textContent = hours % 24;
      document.getElementById("days").textContent = days;
      document.getElementById("heartbeats").textContent = heartbeats.toLocaleString();
    }

    updateLoveCounters();
    setInterval(updateLoveCounters, 1000); // ⏱ Update every second
  </script>
</body>
</html>
