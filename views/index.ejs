  <title>To My Beautiful <%= name %></title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Playfair+Display:wght@400;700&family=Inter:wght@400;500&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
    .font-playfair { font-family: 'Playfair Display', serif; }
    .font-dancing-script { font-family: 'Dancing Script', cursive; }
    .nav-card {
      background: linear-gradient(145deg, rgba(255, 241, 242, 0.8), rgba(252, 231, 243, 0.8));
      backdrop-filter: blur(8px);
      border: 1px solid rgba(255, 255, 255, 0.5);
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      box-shadow: 0 8px 16px rgba(219, 39, 119, 0.05);
    }
    .nav-card:hover {
      transform: translateY(-12px);
      box-shadow: 0 25px 40px rgba(219, 39, 119, 0.15);
      background: linear-gradient(145deg, rgba(255, 241, 242, 1), rgba(252, 231, 243, 1));
      border-color: rgba(255, 255, 255, 0.8);
    }
    .nav-card h2 {
      text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.5);
    }
    .nav-card-link {
      text-decoration: none !important;
    }
    .nav-card p {
      color: #374151; /* text-gray-700 */
    }
    .game-button {
      background: linear-gradient(145deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.5));
      border: 1px solid rgba(255, 255, 255, 0.8);
      transition: all 0.3s ease;
    }
    .game-button:hover {
      background: white;
      box-shadow: 0 0 15px rgba(236, 72, 153, 0.4);
      transform: scale(1.05);
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .fade-in {
      animation: fadeIn 0.8s ease-out forwards;
    }
  </style>
</head>
